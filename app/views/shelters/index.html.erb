<h1>Shelters:</h1>

<% @shelters.each do |shelter| %>
  <h2><%= link_to "#{shelter.name}", "shelters/#{shelter.id}" %></h2>
  <p>Available Pets:</p>
  <% shelter.pets.each do |pet| %>
    <h3><%= link_to "#{pet.name}", "/pets/#{pet.id}" %>: <%= pet.adoption_status %></h3>
    <sub>(<%= pet.description %>)</sub>
  <% end %>
  <p>
    <%= button_to "Edit Shelter", "/shelters/#{shelter.id}/edit" %>
    <%= button_to "Delete Shelter", "/shelters/#{shelter.id}", method: :delete %>
  </p>
    <br>
<% end %>

  <br>
    <br>
<p><%= link_to "New Shelter", '/shelters/new' %></p>
