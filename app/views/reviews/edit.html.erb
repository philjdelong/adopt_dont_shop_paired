<h1>Edit Shelter Review:</h1>

<%= form_tag "/shelters/#{@shelter}/reviews/#{@review.id}", method: :patch do %>
  <%= label_tag :title %>
  <br>
  <%= text_field_tag :title, @review.title %>
  <br><br>
  <%= label_tag :rating %>
  <br>
  <%= text_field_tag :rating, @review.rating %>
  <br><br>
  <%= label_tag :content %>
  <br>
  <%= text_field_tag :content, @review.content %>
  <br><br>
  <%= label_tag :picture %>
  <br>
  <%= text_field_tag :picture, @review.picture %>
  <br><br>
  <%= submit_tag 'Save Review' %>
<% end %>
